div#contact_us.scrollspy.full-panel
	img(src='/images/pages/contact_bg_small.jpg' class='center-cropped')
	//div.dimmer
	div.row.panel-title
		h5.center-aligned Contact Us
	div.row.contact-panel
		form(class="contact-form" method='POST' action='sendEmail')
			div.row
				div.input-field.col.s12.m6
					input(type="text" id='name' name='name' class='validate' required='required')
					label(for='name') Name
				div.input-field.col.s12.m6
					input(type="email" id='email' name='email' class='validate' required='required')
					label(for='email') Email
				div.input-field.col.s12
					textarea(placeholder="Message" name='message' id='message' required='required')
			button(class="contact-submit" type="submit" name="action") Send
	div.social-icons-container-bottom
		a(class="social-icons" href="https://www.facebook.com/emiliomartini.cubaguitar" target='_blank')
			img(src="/images/assets/facebook.svg")
		a(class="social-icons" href="https://www.instagram.com/emiliomartini.guitar/" target='_blank')
			img(src="/images/assets/instagram.svg")
		a(class="social-icons" href="https://www.youtube.com/user/reycubass" target='_blank')
			img(src="/images/assets/youtube.svg")
	a(class="waves-effect waves-light btn-flat go-home-btn hide-on-small-only" href='#header')
		i.material-icons.medium home


